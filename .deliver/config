APP="phoenix_crawler"

BUILD_HOST="13.115.209.106"
BUILD_USER="ec2-user"
BUILD_AT="/home/ec2-user/app_build"

PRODUCTION_HOSTS="13.115.209.106"
PRODUCTION_USER="ec2-user"
DELIVER_TO="/home/ec2-user/app_release"

pre_erlang_clean_compile() {
  status "Prparing assets with: brunch build and phoenix.digest"
  __sync_remote "
    # Runs the commands on the build host
    set -e
    cd '$BUILD_AT'
    mkdir -p priv/static
    npm install
    node_modules/.bin/brunch build --production
    app='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phoenix.digest $SILENCE
  "
}
